@model Login





<section class="vh-100" >
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center" style="background-color: #e9ecef;">

                        <h3 class="mb-5">Sign in</h3>

                        <form asp-controller="Access" asp-action="Login" method="post">

                            <div class="form-outline mb-4">
                                <input type="email" id="typeEmailX-2" class="form-control form-control-lg" asp-for="Email" />
                                <label class="form-label" for="typeEmailX-2">Email</label>
                            </div>

                            <div class="form-outline mb-4">
                                <input type="password" id="typePasswordX-2" class="form-control form-control-lg" asp-for="Password" />
                                <label class="form-label" for="typePasswordX-2">Password</label>
                            </div>

                            <!-- Checkbox -->


                            <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>


                            @if(ViewData["ValidateMessage"] != null){

                            <br />
                            <br />
                            <label>@ViewData["ValidateMessage"] </label>
                            }


                        </form>
                       
                       

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
